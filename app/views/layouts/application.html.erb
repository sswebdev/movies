<!DOCTYPE html>
<html>

  <head>
    <title>Movies</title>
    <%= stylesheet_link_tag "https://github.com/necolas/normalize.css/blob/master/normalize.css" %>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <header>
      <h1 class="title"><%= link_to "SMDB", root_url %></h1>
      <nav>
        <%= link_to "Movies", movies_url %>
        <%= link_to "Actors", actors_url %>
        <%= link_to "Directors", directors_url %>
        <div class="user-nav">
          <!--TODO: Get this working -->
          <%= form_tag movies_url, method: "get" do %>
            <input type="text" placeholder="Search" class="nav-search"></input>
            <%= link_to "Sign In", '/login' %>
            <%= link_to "Sign Out", '/logout' %>
          <% end %>
        </div>
      </nav>
    </header>

    <div class="container">
      <h2 class="notice"><%= notice %></h2>
      <% if session[:user_id] %>
        <h2>Hello, <%= User.find_by(id: session[:user_id]).email %></h2>
      <% end %>
      <%= yield %>
    </div>
  </body>

</html>
